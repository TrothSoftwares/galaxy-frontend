              {{#each statuses as |statusChoice|}}
                <option value={{statusChoice}} selected={{eq enquiry.status statusChoice}}>{{statusChoice}}</option>
              {{/each}}
        </select>
    </div>


        </div>

        <div class="two fields">


        </div>
