  <div class="ui tag labels">
<a class="ui label large">
  Started Date : {{sale.installments.lastObject.date}}
</a>
</div>
</div>


<div class="ui segment">
  <div class="ui tag labels">
<a class="ui label large">
  Ended Date : {{sale.installments.lastObject.date}}
</a>
</div>
</div>



<div class="ui dividing header">Payment History </div>

{{#each sale.installments as |installment index|}}
<div class="ui segment">
  <div class="ui tag labels">
<a class="ui label large">
  Date : {{installment.date}}
  Amount: {{installment.amount}}
</a>
</div>
</div>
{{/each}}





  </div>
</div>

{{/if}}

