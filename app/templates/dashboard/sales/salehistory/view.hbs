

<div class="ui inverted menu sec3-h" style="padding:0px 0px 0px 0px !important; " >
  {{#link-to 'dashboard.sales' }}
  <div class="item">
    <img src="images/bk2.png" alt="" />
  </div>
  {{/link-to}}
  <div class="ui header item">
  New Sale
</div>
</div>

<div class="ui inverted small form sec3-con grid">
  <div class="eight wide column">
    <div class="ui dividing inverted header">Customer </div>
<div class="ui dividing inverted header">Customer Info</div>


<div class="customerview">
    <div class="field ">
      <label>Name</label>
      {{sale.customer.name}}
    </div>
    <div class="field">
      <label>Address</label>
      {{sale.customer.address}}
    </div>
      <div class="two fields">
        <div class="field">
          <label>Contact</label>
          {{sale.customer.contact}}
        </div>
          <div class="field">
            <label>Email</label>
            {{sale.customer.email}}
          </div>
        </div>
        <button class="ui primary mini button" {{action "editCustomer"}} >Edit</button>
      </div>




        <div class="ui  form customerview customeredit" style="display:none">
          <div class="inline field">
            <label style="width:150px"> Name</label>:
              {{input type="text" placeholder="Name" value=sale.customer.name}}
              </div>
              <div class="inline field">
              <label style="width:150px">Address </label>:
              {{input type="text" placeholder="Address" value=sale.customer.address}}
            </div>
          <div class="inline field">
            <label style="width:150px"> Contact</label>:
              {{input type="text" placeholder="Contact" value=sale.customer.contact}}
              </div>
              <div class="inline field">
              <label style="width:150px">Email </label>:
              {{input type="text" placeholder="Email" value=sale.customer.email}}
            </div>

            <button class="ui primary mini button" {{action "saveCustomer"}} >Save</button>
        </div>


</div>





{{#if (eq sale.status 'Incomplete')}}


<div class="eight wide column">
  <div class="ui dividing inverted header">Sales Info </div>


  <button class="ui primary mini button {{ismarkCompletedButtonActive}}" {{action "markCompleted"}} >Mark as Completed</button>

  <div class="field ">
    <label>Total Price</label>
    {{input placeholder="Total Price"  type="text"   value=sale.totalprice}}
  </div>
  <div class="field ">
    <div class="ui tag labels">
  <a class="ui label large">
    Paid Till Now : {{sale.paidtillnow}}
  </a>
</div>
  </div>
  <div class="field ">
    <div class="ui tag labels">
  <a class="ui label large">
    Balance : {{sale.balanceamount}}
  </a>
</div>
  </div>
  <div class="field">
    <label>Installments / Month</label>
    {{input placeholder="Installments / Month"  type="text" value=sale.installpricepermonth}}
  </div>
  <div class="field ">
    <div class="ui tag labels">
  <a class="ui label large">
    Number of Installments : {{sale.months}}
  </a>
</div>
      </div>
      <div class="ui blue small submit button {{isupdateSaleButtonEnabled}}"   {{action "updateSale"}}>Save</div>

      <div class="ui blue small submit button "   {{action "newInstallment"}}>New Installment</div>

      <div class="ui  segments">
        {{#each reverse as |installment index|}}
        <div class="ui inverted segment">
          <div class="field">
            <label>Date</label>
            {{pikaday-input  placeholder="Select Date" value=installment.date}}
          </div>
          <div class="field">
            <label>Date</label>
            {{input placeholder="Installments / Month"  type="text" value=installment.amount}}
          </div>
<div class="ui blue small submit button "   {{action "deleteInstallment" installment }}>Delete</div>

        </div>
        {{/each}}
      </div>
</div>

{{/if}}





{{#if (eq sale.status 'Completed')}}
<div class="ui raised  segments">

  <div class="ui segment">
    <div class="ui tag labels">
  <a class="ui label large">
    Total Amount : {{sale.totalprice}}
  </a>
</div>
  </div>


  <div class="ui segment">
    <div class="ui tag labels">
  <a class="ui label large">
    Paid Till Now : {{sale.paidtillnow}}
  </a>
</div>


<div class="ui segment">
  <div class="ui tag labels">
<a class="ui label large">
  Started Date : {{sale.installments.lastObject.date}}
</a>
</div>
</div>


<div class="ui segment">
  <div class="ui tag labels">
<a class="ui label large">
  Ended Date : {{sale.installments.lastObject.date}}
</a>
</div>
</div>


<div class="ui dividing header">Payment History </div>

{{#each sale.installments as |installment index|}}
<div class="ui segment">
  <div class="ui tag labels">
<a class="ui label large">
  Date : {{installment.date}}
  Amount: {{installment.amount}}
</a>
</div>
</div>
{{/each}}





  </div>
</div>

{{/if}}






</div>
