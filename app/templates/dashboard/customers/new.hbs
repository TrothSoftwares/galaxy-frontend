
<div class="ui inverted menu sec3-h" style="padding:0px 0px 0px 0px !important; " >
  {{#link-to 'dashboard.customers' }}
  <div class="item">
    <img src="images/bk2.png" alt="" />
  </div>
  {{/link-to}}
  <div class="ui header item">
Add New Customer
</div>
</div>
<div class="ui inverted small form sec3-con grid">
  <div class="eight wide column">
  <!-- <div class="ui inverted dividing header">
    Basic Info
  </div> -->

      <div class="field {{validItemcodeError}}">
        <label>Name</label>
        {{input placeholder="Name"  type="text"   value=name}}
      </div>
      <div class="field">
        <label>Address</label>
        {{input placeholder="Address"  type="text" value=address}}
      </div>

        <div class="two fields">
            <div class="field">
              <label>Contact</label>
              {{input placeholder="Contact" type="text" value=contact}}
            </div>
            <div class="field">
              <label>Email</label>
              {{input placeholder="Email" type="email" value=email }}
            </div>
          </div>
          <div class="ui blue small submit button {{isCreateCustomerButtonDisabled}}"   {{action "createCustomer"}}>Save</div>

  </div>

</div>
{{outlet}}
